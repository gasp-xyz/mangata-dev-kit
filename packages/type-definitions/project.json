{
  "name": "@mangata-finance/type-definitions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/type-definitions/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup packages/type-definitions/src/index.ts --dts --format esm --clean --splitting false --outDir dist/packages/type-definitions"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/type-definitions/**/*.ts",
          "packages/type-definitions/package.json"
        ]
      }
    },
    "semantic-release": {
      "executor": "@goestav/nx-semantic-release:semantic-release",
      "options": {
        "branches": [
          "main",
          { "name": "rc/*", "channel": "rc", "prerelease": "rc" }
        ],
        "buildTarget": "@mangata-finance/type-definitions:build",
        "repositoryUrl": "https://github.com/mangata-finance/mangata-dev-kit",
        "outputPath": "dist/packages/type-definitions",
        "github": true,
        "changelog": true,
        "npm": true,
        "tagFormat": "${PROJECT_NAME}-v${version}"
      }
    }
  },
  "tags": []
}
