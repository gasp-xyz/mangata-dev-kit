{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mangata-finance/types": ["packages/types/src/index.ts"],
      "@mangata-finance/type-definitions": ["packages/type-definitions/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
